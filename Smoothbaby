<script>
(function() {
  // 初始化变量和数据
  let activeTab = 'self-egg';
  
  // 自卵促排和移植套餐数据 (S0-S2)
  const selfEggPackages = {
    headers: [
      '自卵促排和移植套餐', 
      'S0 (一次促排,4颗PGS) 格鲁吉亚', 
      'S1 (胚胎移植) 乌克兰', 
      'S1 (胚胎移植) 格鲁吉亚',
      'S2(自卵) 乌克兰',
      'S2(自卵) 格鲁吉亚'
    ],
    rows: [
      {
        name: '签订合同支付',
        prices: ['3000', '3000', '3000', '3000', '3000']
      },
      {
        name: '促排开始',
        prices: ['15500', '/', '/', '15000', '15000']
      },
      {
        name: '移植当天支付',
        prices: ['/', '8000', '8000', '5000', '8000']
      },
      {
        name: '验孕成功支付',
        prices: ['/', '5000', '8000', '/', '5000']
      },
      {
        name: '怀孕12周支付',
        prices: ['/', '5000', '8000', '13000', '13000']
      },
      {
        name: '怀孕24周支付',
        prices: ['/', '8000', '8000', '9000', '8000']
      },
      {
        name: '怀孕32周支付',
        prices: ['/', '9000', '9000', '9000', '9000']
      },
      {
        name: '出生三天内支付',
        prices: ['/', '11000', '11000', '11000', '11000']
      },
      {
        name: '总价',
        prices: ['18500', '49000', '55000', '65000', '72000']
      }
    ]
  };
  
  // 捐卵套餐数据 (S3-S4)
  const donorEggPackages = {
    headers: [
      '捐卵套餐', 
      'S3捐卵包成功 (乌克兰)', 
      'S3捐卵包成功 (格鲁吉亚)', 
      'S4 (捐卵指定性别) 乌克兰',
      'S4 (捐卵指定性别) 格鲁吉亚'
    ],
    rows: [
      {
        name: '签订合同支付',
        prices: ['3000', '3000', '3000', '3000']
      },
      {
        name: '促排开始',
        prices: ['15000', '15000', '25000', '25000']
      },
      {
        name: '移植当天支付',
        prices: ['5000', '15000', '5000', '10000']
      },
      {
        name: '验孕成功支付',
        prices: ['5000', '5000', '5000', '15000']
      },
      {
        name: '怀孕12周支付',
        prices: ['8000', '8000', '8000', '8000']
      },
      {
        name: '怀孕24周支付',
        prices: ['8000', '8000', '8000', '8000']
      },
      {
        name: '怀孕32周支付',
        prices: ['10000', '10000', '10000', '10000']
      },
      {
        name: '出生三天内支付',
        prices: ['11000', '11000', '11000', '11000']
      },
      {
        name: '总价',
        prices: ['65000', '75000', '75000', '90000']
      }
    ]
  };

  // DOM加载完成后执行
  document.addEventListener('DOMContentLoaded', function() {
    // 获取DOM元素
    const selfEggTabButton = document.getElementById('self-egg-tab');
    const donorEggTabButton = document.getElementById('donor-egg-tab');
    const tableContainer = document.getElementById('price-table-container');
    
    // 绑定标签点击事件
    selfEggTabButton.addEventListener('click', function() {
      switchTab('self-egg');
    });
    
    donorEggTabButton.addEventListener('click', function() {
      switchTab('donor-egg');
    });
    
    // 初始化显示自卵促排和移植套餐表格
    renderTable(selfEggPackages);
    
    // 切换标签函数
    function switchTab(tab) {
      activeTab = tab;
      
      // 更新按钮样式
      if (tab === 'self-egg') {
        selfEggTabButton.className = 'px-8 py-3 rounded-lg text-lg font-medium transition bg-indigo-600 text-white';
        donorEggTabButton.className = 'px-8 py-3 rounded-lg text-lg font-medium transition bg-white text-indigo-600 border border-indigo-200';
        renderTable(selfEggPackages);
      } else {
        selfEggTabButton.className = 'px-8 py-3 rounded-lg text-lg font-medium transition bg-white text-indigo-600 border border-indigo-200';
        donorEggTabButton.className = 'px-8 py-3 rounded-lg text-lg font-medium transition bg-indigo-600 text-white';
        renderTable(donorEggPackages);
      }
    }
    
    // 渲染表格函数
    function renderTable(packageData) {
      tableContainer.innerHTML = '';
      
      const table = document.createElement('table');
      table.className = 'w-full text-sm divide-y divide-gray-200 border fade-in';
      
      // 创建表头
      const thead = document.createElement('thead');
      thead.className = 'bg-gradient-to-r from-indigo-600 to-indigo-800';
      
      const headerRow = document.createElement('tr');
      packageData.headers.forEach((header, index) => {
        const th = document.createElement('th');
        th.className = `px-4 py-4 text-white font-semibold text-sm text-center ${index === 0 ? 'text-left' : ''}`;
        th.textContent = header;
        headerRow.appendChild(th);
      });
      
      thead.appendChild(headerRow);
      table.appendChild(thead);
      
      // 创建表体
      const tbody = document.createElement('tbody');
      tbody.className = 'bg-white divide-y divide-gray-200';
      
      packageData.rows.forEach((row) => {
        const tr = document.createElement('tr');
        if (row.name.includes('总价')) {
          tr.className = 'bg-yellow-100 font-bold';
        }
        
        // 添加名称单元格
        const tdName = document.createElement('td');
        tdName.className = 'px-4 py-4 whitespace-nowrap text-gray-800';
        tdName.textContent = row.name;
        tr.appendChild(tdName);
        
        // 添加价格单元格
        row.prices.forEach((price) => {
          const tdPrice = document.createElement('td');
          tdPrice.className = 'px-4 py-4 whitespace-nowrap text-center text-gray-800';
          tdPrice.textContent = price ? `${price} 美元` : '-';
          tr.appendChild(tdPrice);
        });
        
        tbody.appendChild(tr);
      });
      
      table.appendChild(tbody);
      tableContainer.appendChild(table);
    }
  });
})();
</script>
